<h1>Contact Details: <%= @the_contact.first_name %></h1>

<canvas id="relationshipChart" width="400" height="200"></canvas>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://cdn.jsdelivr.net/npm/luxon@3"></script>
<script src="https://cdn.jsdelivr.net/npm/chartjs-adapter-luxon"></script>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const chartData = <%= raw @chart_data.to_json %>;

    const labels = chartData.map((point) => point.date);
    const data = chartData.map((point) => point.value);

    const ctx = document.getElementById('relationshipChart').getContext('2d');
    const relationshipChart = new Chart(ctx, {
      type: 'line',
      data: {
        labels: labels,
        datasets: [{
          label: 'Relationship Strength',
          data: chartData.map((point) => ({
            x: point.date,
            y: point.value,
            eventId: point.id // Attach the event ID to each data point
          })),
          borderColor: 'rgba(193, 176, 159)',
          backgroundColor: 'rgba(193, 176, 159, 0.25)',
          borderWidth: 2,
          fill: true,
        }]
      },
      options: {
        responsive: true,
        parsing: {
          xAxisKey: 'x', // Map to the `x` property in your data points
          yAxisKey: 'y'  // Map to the `y` property in your data points
        },
        scales: {
          x: {
            type: 'time',
            time: {
              unit: 'month'
            },
            title: {
              display: true,
              text: 'Date'
            }
          },
          y: {
            title: {
              display: true,
              text: 'Relationship Strength'
            },
            beginAtZero: true
          }
        },
        onClick: (event, elements) => {
          if (elements.length > 0) {
            const chartElement = elements[0]; // First clicked element
            const datasetIndex = chartElement.datasetIndex; // Dataset index
            const dataIndex = chartElement.index; // Data index

            // Retrieve eventId from the dataset
            const eventId = relationshipChart.data.datasets[datasetIndex].data[dataIndex].eventId;

            // Redirect to the corresponding event page
            if (eventId) {
              window.location.href = `/events/${eventId}`;
            } else {
              console.error("Event ID not found for this data point.");
            }
          }
        }  
      }
    });
  });
</script>


